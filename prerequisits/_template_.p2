[mesh]
size = 1.e-6    ; scaling factor for mesh/geometry
scale = 0.0

[initial state]
mx = 1.
my = 0.
mz = 0.

[field]
hstart = 1.5
hfinal = -8.0
hstep = -0.001
mfinal = -0.5
mstep = 0.5
hx = 0.0
hy = 0.034
hz = 1.

[minimizer] 
tol_fun = 1.0e-10
cg_method = 1004
precond_iter = 10
hmag_on = 1
print_hmag = 0
verbose = 0

[solver] 
solver = MUMPS
precond = REC_ILU
method = store

[parallel]
backend = ESCRIPT
